{
  "extends": ["airbnb", "prettier/react"],
  "plugins": [ "prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "graphql": true
  },
  "rules": {
    "arrow-parens": 0,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-underscore-dangle": 0,
    "react/jsx-filename-extension": 0,
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ]
  }
}
